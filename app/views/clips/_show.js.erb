<%= javascript_tag do %>

	function playClip(){
		player.setPlaybackQuality('hd720');
		player.loadVideoById({
			videoId:'<%= @clip.youtube_id %>', 
			startSeconds:<%= @clip.start %>, 
			endSeconds:<%= @clip.end %>
		});
    }

	function onPlayerReady(event){
        playClip();
    }
    
    function showTime(){
	    time = player.getDuration();
	    $('#video-time').innerHTML(time);
    }
    
<% end %>