<%= javascript_tag do %>

	$(document).ready(function(){
			
		$('#new-video-button').click(function() {
			videoURL = $('#video-id').val();
			regExp = /^.*((youtu.be\/)|(v\/)|(\/u\/\w\/)|(embed\/)|(watch\?))\??v?=?([^#\&\?]*).*/;
			match = videoURL.match(regExp);
			if (match != null) {
				window.location.href = '/youtube/'+match[7];
			} else {
				$('#error-alert').fadeIn();
			}
		})
	
	})
	
<% end %>